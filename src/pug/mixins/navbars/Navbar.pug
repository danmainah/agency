mixin Navbar
  nav.navbar.navbar-expand-lg.navbar-light.py-3(data-navbar-on-scroll)
    .container
      a.navbar-brand(href='index.html')
        span.text-primary.fs-3.ms-1.fw-bolder Waimbu 
        span.fw-thin.text-300.fs-2 Agency
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon

      #navbarSupportedContent.collapse.navbar-collapse.pt-4.pt-lg-0
        p.mb-0.ms-auto.text-light.fs-0.fw-normal
          i.fas.fa-phone-alt.me-2
          | Call Us Now 
          a(href='tel:+604-680-9785').text-light +254723245567
            
        ul.navbar-nav.me-auto.border-bottom.border-lg-bottom-0.pt-2.pt-lg-0
          li.nav-item.px-2
            a.nav-link.active(aria-current='page', href='#' class= currentPage === 'index' ? 'active' : false ) Home
          li.nav-item.px-2
            a.nav-link(href='#products') Products
          li.nav-item.px-2
            a.nav-link(href='#news') News &amp; Blog
          li.nav-item.px-2
            a.nav-link(href='#contact') Contact us
          